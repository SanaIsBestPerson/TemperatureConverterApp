<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.temperatureconverterapp.ConController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <TextField fx:id="txtInput" promptText="Enter text here" />
  <Button text="Convert" onAction="#onButtonClick"/>
  <Label fx:id="lblDisplay"/>
  <Label fx:id="lblConvert" text="->"/>
  <ComboBox fx:id="comTo" promptText="Select a measurement" />
  <ComboBox fx:id="comFrom" promptText="Select a measurement" />

</VBox>
